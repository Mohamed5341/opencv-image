{
  "name": "opencv-image",
  "displayName": "OpenCV C++ Image",
  "description": "This is a simple extension to display opencv images while c++ debugging.",
  "version": "0.0.6",
  "publisher": "SimpleToolsDev",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mohamed5341/opencv-image.git"
  },
  "homepage": "https://github.com/Mohamed5341/opencv-image/blob/main/README.md",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "C++",
    "OpenCV",
    "debug"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opencv-image.imagevariable",
        "title": "Show Image"
      }
    ],
    "menus": {
      "debug/variables/context": [
        {
          "when": "resourceLangId == cpp",
          "command": "opencv-image.imagevariable",
          "group": "3_compare"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "jimp": "^0.22.8"
  }
}
